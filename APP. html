<script>
  // Smoke Effect
  function createSmoke() {
    const bg = document.getElementById('smoke-background');
    for (let i = 0; i < 10; i++) {
      const p = document.createElement('div');
      p.classList.add('smoke-particle');
      p.style.left = `${Math.random() * 100}%`;
      p.style.animationDuration = `${8 + Math.random()*10}s`;
      p.style.width = p.style.height = `${4 + Math.random()*8}px`;
      bg.appendChild(p);
      setTimeout(()=>p.remove(),15000);
    }
  }
  setInterval(createSmoke,400);

  // Login
  const loginBtn = document.getElementById('loginBtn');
  const usernameInput = document.getElementById('usernameInput');
  const passwordInput = document.getElementById('passwordInput');
  const loginDiv = document.getElementById('loginDiv');
  const dashboardDiv = document.getElementById('dashboardDiv');
  const dashUsername = document.getElementById('dashUsername');
  const loginError = document.getElementById('loginError');

  loginBtn.addEventListener('click', () => {
    const username = usernameInput.value.trim();
    const password = passwordInput.value.trim();
    if(username === 'admin' && password === 'admin'){
      loginDiv.style.display='none';
      dashboardDiv.style.display='block';
      dashUsername.textContent = username;
      loginError.style.display='none';
    } else {
      loginError.style.display='block';
    }
  });

  // Popup and Delicious button
  const deliciousBtn = document.getElementById('deliciousBtn');
  const popupMenu = document.getElementById('popupMenu');
  const popupButtons = document.querySelectorAll('.popup-btn');
  const attackBtn = document.getElementById('attackBtn');
  const notifText = document.getElementById('notifText');
  const waInput = document.getElementById('waInput');

  deliciousBtn.addEventListener('click', ()=>{
    if(waInput.value.trim()===''){
      alert('Silahkan masukkan nomor WhatsApp terlebih dahulu!');
      return;
    }
    popupMenu.classList.add('active');
  });

  popupButtons.forEach(btn=>{
    btn.addEventListener('click', ()=>{
      deliciousBtn.textContent = btn.dataset.value;
      popupMenu.classList.remove('active');
      attackBtn.style.display='block';
    });
  });

  attackBtn.addEventListener('click', ()=>{
    notifText.style.display='block';
    setTimeout(()=>{notifText.style.display='none';},2500);
  });
</script>
